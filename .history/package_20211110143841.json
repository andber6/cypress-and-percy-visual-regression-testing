{
  "name": "cy-visual-tests",
  "version": "1.0.0",
  "description": "visual regression testing using cypress",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run-tests": "cypress run",
    "cy:update-snapshots": "cypress run --env updateSnapshots=true",
    "cy:run-tests-with-reporter": "cypress run --reporter cypress-image-snapshot",
    "cy:run-tests-with-no-failure": "cypress run --env failOnSnapshotDiff=false"
  },
  "keywords": [
    "cypress",
    "visual",
    "testing",
    "snapshots"
  ],
  "author": "Andr√© Bergan",
  "license": "ISC",
  "dependencies": {
    "cypress": "^8.7.0",
    "cypress-image-snapshot": "^4.0.1",
    "prettier": "^2.4.1"
  }
}
